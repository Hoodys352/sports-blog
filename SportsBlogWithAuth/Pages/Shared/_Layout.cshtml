<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sports Blog</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display&display=swap" rel="stylesheet">
</head>
<body>
    <nav class="navbar sticky-top navbar-expand-sm box-shadow mb-3">
        <div class="container justify-content-between">
            <div class="d-flex justify-content-start">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Sports Blog</a>
                <div class="dropdown">
                    <button class="btn btn-warning dropdown-toggle rounded-0" id="dropdownMenuLink" data-toggle="dropdown">
                        Kategorie
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        <a class="dropdown-item" asp-page="SearchResult" asp-route-tag="Football">Football</a>
                        <a class="dropdown-item" asp-page="SearchResult" asp-route-tag="Baseball">Baseball</a>
                        <a class="dropdown-item" asp-page="SearchResult" asp-route-tag="Handball">Handball</a>
                        <a class="dropdown-item" asp-page="SearchResult" asp-route-tag="Volleyball">Volleyball</a>
                        <a class="dropdown-item" asp-page="SearchResult" asp-route-tag="Hockey">Hockey</a>
                    </div>
                </div>
            </div>
            @await Html.PartialAsync("_LoginPartial")
            <a class="btn btn-outline-success btn-gold rounded-0" asp-page="/Search">Search post</a>
        </div>
    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container mt-md-auto">
            <div class="row text-center">
                <div class="col-lg-4">
                    <span>ALL</span>
                </div>
                <div class="col-lg-4">
                    <span>COPYRIGHTS</span>
                </div>
                <div class="col-lg-4">
                    <span>RESERVED</span>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js" defer></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" defer></script>
    <script src="~/js/site.js" asp-append-version="true" defer></script>

    @RenderSection("Scripts", required: false)
</body>
</html>