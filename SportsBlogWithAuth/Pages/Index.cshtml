@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6 text-center">
            <a asp-page="Create" class="btn index-top-button">Utwórz nowy post</a>
        </div>
    </div>

    @if (Model.Posts.Count != 0)
    {
        @foreach (var item in Model.Posts.Reverse())
        {
            <div class="row">
                <div class="col-xl-12">
                    <div class="card mt-3">
                        <img src="~/images/@Html.DisplayFor(modelItem => item.ImageName)" class="card-img-top img-fluid" alt="missing @item.ImageName">
                        <!--<div style="background-image: url(https://scontent-waw1-1.xx.fbcdn.net/v/t1.15752-9/117880870_3755429367804524_5502809677360003462_n.jpg?_nc_cat=106&ccb=1-3&_nc_sid=ae9488&_nc_ohc=q1FdQcFkgdYAX-yMPSx&_nc_ht=scontent-waw1-1.xx&oh=8bec5748c66be58fa87399c9672e0bc4&oe=60C0B86F); background-position: center; background-size: cover; height: 15rem;">-->
                        <!--</div>-->
                        <div class="card-body">
                            <a asp-page="./Details" asp-route-id="@item.PostId">
                                <h2 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h2>
                            </a>
                            <p class="card-text">@Html.DisplayFor(modelItem => item.ShortContent)...</p>
                            <p class="d-flex card-text justify-content-around">
                                <span class="text-muted">@Html.DisplayFor(modelItem => item.CreatedAt)</span>
                                <span class="text-muted">@Html.DisplayFor(modelItem => item.ETag)</span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
